<%= simple_form_for [@list, @list.items.build], html: { class: 'form-horizontal' }, remote: true, format: :js do |f| %>
  <div class="col-lg-6">
    <%= f.input :name, label: false, placeholder: "Add a New Item", as: :string %>
  </div>
  <div class="col-lg-6">
    <%= f.submit 'Add' , class: 'btn btn-success' %>
  </div>
<% end %>
